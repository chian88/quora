.container.py-3
  .row
    .col-3
      %ul
        %li
          %h6 Feeds
        %hr/
        %li
          = link_to 'Most Popular Questions', questions_path(sort: 'top_views')
        %li
          = link_to 'Newest Questions', questions_path
    .col-7
      %h5 You have asked these questions.
      %hr
      - @questions.each do |question|
        = render 'question', question: question

      .digg_pagination
        = will_paginate @questions, :page_links => true